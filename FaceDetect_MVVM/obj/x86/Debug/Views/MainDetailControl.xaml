<UserControl x:ConnectionId='1'
    x:Class="FaceDetect_MVVM.Views.MainDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FaceDetect_MVVM.Core.Models"
    mc:Ignorable="d"
    d:DesignWidth="400" Height="2129">
    <ScrollViewer x:ConnectionId='2'
        Name="ForegroundElement"
        Padding="{StaticResource DetailPageMargin}"
        HorizontalAlignment="Stretch"
        VerticalScrollMode="Enabled"
        IsTabStop="True">
        <ScrollViewer.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFC5EAB3" Offset="0.329"/>
                <GradientStop Color="#FFA5A7D8" Offset="0.691"/>
            </LinearGradientBrush>
        </ScrollViewer.Background>
        <StackPanel HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='22'
                    Margin="{StaticResource SmallLeftMargin}"
                    VerticalAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"                   
                                                                     />
            </StackPanel>
            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Gender" />
            <TextBlock x:ConnectionId='3'
                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                                                />

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Age" />
            <TextBlock x:ConnectionId='4'
                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                                            />

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Hair" />
            <TextBlock x:ConnectionId='5'
                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                                                      />

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Emotion" />
            <TextBlock x:ConnectionId='6'
                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                                                    />

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Glasses" />
            <TextBlock x:ConnectionId='7'
                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                                                 />

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Smile" />
            <TextBlock x:ConnectionId='8'
                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                                               />


            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Head Pose" />
            <TextBlock Style="{StaticResource DetailBodyBaseMediumStyle}">
                <Run Text="Pitch: "></Run>
                <Run x:ConnectionId='19'                                                                        ></Run>
                <Run Text="    Roll:"></Run>
                <Run x:ConnectionId='20'                                                                       ></Run>
                <Run Text="    Yaw:"></Run>
                <Run x:ConnectionId='21'                                                                      ></Run>
            </TextBlock>

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Facial Hair" />
            <TextBlock Style="{StaticResource DetailBodyBaseMediumStyle}">
                <Run Text="Moustache: "></Run>
                <Run x:ConnectionId='16'                                                                              ></Run>
                <Run Text="    Beard:"></Run>
                <Run x:ConnectionId='17'                                                                          ></Run>
                <Run Text="    Sideburns:"></Run>
                <Run x:ConnectionId='18'                                                                              ></Run>
            </TextBlock>

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Noise and Exposure" />
            <TextBlock Style="{StaticResource DetailBodyBaseMediumStyle}">
                <Run Text="Noise: "></Run>
                <Run x:ConnectionId='12'                                                                          ></Run>
                <Run Text="  "></Run>
                <Run x:ConnectionId='13'                                                                     ></Run>
                <Run Text=" ----------  Exposure:"></Run>
                <Run x:ConnectionId='14'                                                                                ></Run>
                <Run Text="  "></Run>
                <Run x:ConnectionId='15'                                                                        ></Run>

            </TextBlock>

            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                Style="{StaticResource DetailSubTitleStyle}"
                Text="Occlusion" />
            <TextBlock Style="{StaticResource DetailBodyBaseMediumStyle}">
                <Run Text="Forehead: "></Run>
                <Run x:ConnectionId='9'                                                                                    ></Run>
                <Run Text="  Eye:"></Run>
                <Run x:ConnectionId='10'                                                                               ></Run>
                <Run Text="  Mouth:"></Run>
                <Run x:ConnectionId='11'                                                                                 ></Run>
            </TextBlock>





        </StackPanel>
    </ScrollViewer>
</UserControl>

